<%= flash[:danger] %>
<% if @book.errors.any? %>
 <%= @book.errors.count %>件のerrorが発生しました
 <ul>
   <% @book.errors.full_messages do each |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
 <% end %>
<div class="container">
  <div clas="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto pt-3">
      <h2>Editing Book</h2>
      <%= form_with model:@book, url:book_path(@book), method: :patch do |book| %>

      <label>
        Title</br>
        <%= book.text_field :title %>
      </label></br>
      <label>
        Option</br>
        <%= book.text_area :body %>
      </label></br>
      <input class="btn btn-sm btn-success" value="Update Book" type="submit">
      <% end %>
      <%= link_to "Show", book_path(@book) %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
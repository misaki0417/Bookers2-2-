
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag user.get_image %>
        <table>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </table>

        <%= link_to edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block mx-auto" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>  
        <h2>New book</h2>
        <%= form_with model: books do |book| %>
        <label>
          Title</br>
          <%= book.text_field :title %>
        </label>
        <label>
          Option</br>
          <%= book.text_area :body %>
        </label>
        <input class="btn btn-success" type="submit" value="Create Book">
        <% end %>
      </div>








<%= flash[:success] %>

<div class="container">
  <div class="row">
    <%=render 'users/userinfo',user: @user,books: @books %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Option</th>
        </tr>
        <% @book.each do |book| %>
        <tr>
          <td><%=link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_image %>
          <% end %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body%></td>
        </tr>
        <% end %>
      </table>


    </div>
  </div>
</div>
<div class="container pt-3">
  <!--<div class="col">-->
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_image %>

        <table>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </table>
        <%= link_to 'icon','#',class:"btn btn-outline-secondary btn-block mx-auto" %>
        <h2>New book</h2>
        <%= form_with model: @books do |book| %>
        <label>
          Title</br>
          <%= book.text_field :title %>
        </label>
        <label>
          Option</br>
          <%= book.text_area :body %>
        </label>
        <input class="btn btn-success btn-sm" type="submit" value="Create Book">
        <% end %>
      </div>
      <div class="col-md-9">
        <h2>Users</h2>
        <table>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <% @users.each do |users| %>
            <td><%= users.get_image %></td>
            <td><%= users.name %></td>
            <td></td>
            <% end %>
          </tr>
        </table>
        </div>
    </div>
  </div>
</div>






